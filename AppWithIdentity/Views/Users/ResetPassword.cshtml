@model AppWithIdentity.ViewModels.ResetPasswordViewModel

@{
    ViewBag.Title = "Сброс пароля";
}
<h2>Изменение пароля для пользователя @Model.Email</h2>
<form asp-action="ResetPassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Новый пароль</label>
        <input type="password" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PasswordConfirm" class="control-label">Повторите пароль</label>
        <input type="password" asp-for="PasswordConfirm" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
    </div>
</form>